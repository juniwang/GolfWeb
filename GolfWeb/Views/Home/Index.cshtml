@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="@Url.Content("~/scripts/jquery.nivo.slider.pack.js")" type="text/javascript"></script>
}
<div id="wrapper">
    <div class="slider-wrapper theme-default">
        <div id="slider" class="nivoSlider">
            <img src="/content/images/slides/slide1.jpg" data-thumb="/content/images/slides/slide1.jpg"
                alt="" data-transition="sliceUpLeft" />
            <img src="/content/images/slides/slide2.jpg" data-thumb="/content/images/slides/slide2.jpg"
                alt="" data-transition="fade"/>
            <img src="/content/images/slides/slide3.jpg" data-thumb="/content/images/slides/slide3.jpg"
                alt="" data-transition="slideInLeft" />
            <a href="/home/bamboo">
                <img src="/content/images/slides/slide4.jpg" data-thumb="/content/images/slides/slide4.jpg"
                    alt="" data-transition="sliceUpDownRight"/></a>
        </div>
    </div>
</div>
<div class="hyper">
    <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tr>
            <td>
                <a href="/Home/Wooden">
                    <img alt="" src="../../Content/images/hyper_wooden.jpg" /></a>
            </td>
            <td>
                <a href="/Home/Pantone">
                    <img alt="" src="../../Content/images/hyper_pantone.jpg" /></a>
            </td>
            <td>
                <a href="/Home/TeeWithLogo">
                    <img alt="" src="../../Content/images/hyper_teewithlogo.jpg" /></a>
            </td>
        </tr>
    </table>
</div>
<script type="text/javascript">
    $(window).load(function () {
        $('#slider').nivoSlider({ prevText: "<div class=\"slideleft\"/>", nextText: "<div class=\"slideleft\"/>", controlNav: false });
    });
</script>
