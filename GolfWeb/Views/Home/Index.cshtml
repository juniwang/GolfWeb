}
<div id="wrapper">
    <div class="slider-wrapper theme-default">
        <div id="slider" class="nivoSlider">
            <img src="/content/images/slides/profession.jpg" data-thumb="/content/images/slides/profession.jpg"
                alt="" data-transition="sliceUpLeft" />
