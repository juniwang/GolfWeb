@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="@Url.Content("~/scripts/slides.js")" type="text/javascript"></script>
}
<script type="text/javascript">
    function resetInterval() {
        if (typeof (si) != "undefined")
            clearInterval(si);
        si = setInterval(function () {
            $("#imgslide").attr("src", window.slides.next());
        }, 3000);
    }

    $(document).ready(function () {
        $("#leftslide").click(function () {
            $("#imgslide").attr("src", window.slides.next("left"));
            resetInterval();
        });

        $("#rightslide").click(function () {
            $("#imgslide").attr("src", window.slides.next());
            resetInterval();
        });

        $("#imgslide").attr("src", window.slides.next());
        resetInterval();
    });
</script>
<div class="slides">
    <div class="imgcontainer">
        <img id="imgslide" alt="" src="" />
    </div>
    <div class="slidesnav">
        <div id="leftslide" width="62px" height="124px" class="slideleft">
        </div>
        <div id="rightslide" width="62px" height="124px" class="slideright">
        </div>
    </div>
</div>
